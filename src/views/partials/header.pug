header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            if loggedIn
                li
                    a(href="/videos/upload") Upload Video
                li
                    a(href="/users/edit") Edit Profile
                li
                    a(href="/users/logout")  Log Out
                li
                    a(href=`/users/${loggedInUser._id}`) 
                        if loggedInUser.avatarUrl === ""
                            span 😎
                        else
                            if loggedInUser.avartarUrl.includes("github") //- socialOnly라고 하면 됨
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else 
                                img.header__avatar(src="/"+ loggedInUser.avatarUrl)
            else
                li
                    a(href="/join")  Join
                li
                    a(href="/login").header_btn  Login                        